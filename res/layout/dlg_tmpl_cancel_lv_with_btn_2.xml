<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dlg_tmpl_cancel_lv_with_btn_2_ll_main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <!-- REF height http://stackoverflow.com/questions/13401562/set-max-height-for-listview answered Nov 15 '12 at 16:21 -->

    <ListView
        android:id="@+id/dlg_tmpl_cancel_lv_with_btn_2_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

    </ListView>

    <LinearLayout
        android:id="@+id/dlg_tmpl_cancel_lv_with_btn_2_ll_filepath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dlg_tmpl_cancel_lv_with_btn_2_bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="2dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/generic_bt_cancel"
            android:textColor="@color/red"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/dlg_tmpl_cancel_lv_with_btn_2_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="2dp"
            android:background="@color/black"
            android:src="@drawable/general_ib_ball_red_48x48" />

    </LinearLayout>

</LinearLayout>